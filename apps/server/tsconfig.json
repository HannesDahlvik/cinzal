{
    "include": ["src/**/*"],
    "exclude": ["node_modules/", "build/"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "build/src",
        "rootDir": "src/"
    }
}
